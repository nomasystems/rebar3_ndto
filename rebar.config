{erl_opts, [warnings_as_errors]}.

{project_plugins, [
    {erlfmt, {git, "git@github.com:WhatsApp/erlfmt.git", {branch, "main"}}},
    {gradualizer, {git, "git@github.com:josefs/Gradualizer.git", {branch, "master"}}}
]}.
{erlfmt, [write]}.

{alias, [
    {check, [
        {fmt, "--check"},
        xref,
        dialyzer,
        gradualizer
    ]},
    {test, [
        {ct, "--spec test/conf/test.spec --cover --readable true"}
    ]}
]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{xref_ignores, [
    rebar3_ndto
]}.

%% TODO: Undefined remote type rebar_state:t/0
{gradualizer_opts, [
    {exclude, [
        "src/rebar3_ndto.erl"
    ]}
]}.
