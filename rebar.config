{erl_opts, [warnings_as_errors]}.

{deps, [
    {ndto, {git, "https://github.com/nomasystems/ndto.git", {branch, "main"}}}
]}.

{project_plugins, [
    erlfmt
]}.
{erlfmt, [write]}.

{dialyzer, [
    {warnings, [no_unknown]}
]}.

{alias, [
    {check, [
        {fmt, "--check"},
        dialyzer
    ]}
]}.
